extends layout

block content
  h1= title
  
  ul
    - issue_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    each issue in issue_list
      li 
        a(href=issue.url) #{issue.title} 
        |  (#{issue.description})

    else
      li There are no issues.